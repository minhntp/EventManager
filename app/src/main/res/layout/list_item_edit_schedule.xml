<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/add_schedule_reorder">

        <EditText
            android:layout_alignParentTop="true"
            android:id="@+id/add_schedule_time_edit_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Giờ"
            android:textSize="16sp"
            android:textStyle="italic"
            android:inputType="none" />

        <EditText
            android:layout_below="@+id/add_schedule_time_edit_text"
            android:id="@+id/add_schedule_content_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:hint="Nội dung" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/add_schedule_reorder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_reorder"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>