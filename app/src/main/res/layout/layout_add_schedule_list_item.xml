<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_toStartOf="@id/add_schedule_reorder">

        <EditText
            android:id="@+id/add_schedule_time_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:focusable="false"
            android:hint="Thời gian"
            android:inputType="none" />

        <EditText
            android:id="@+id/add_schedule_content_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="Nội dung" />
    </LinearLayout>

    <!--<ImageButton-->
        <!--android:id="@+id/add_schedule_delete_button"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_toLeftOf="@id/add_schedule_reorder"-->
        <!--android:src="@drawable/ic_delete"-->
        <!--style="@style/ManageEmployeeButtonStyle"/>-->

    <ImageView
        android:id="@+id/add_schedule_reorder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_reorder"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>