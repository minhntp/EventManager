<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/edit_employee_list_item_profile_image_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/edit_employee_list_item_delete_button"
        android:layout_toEndOf="@id/edit_employee_list_item_profile_image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edit_employee_list_item_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/info_list_item"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_employee_list_item_speciality_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="@dimen/info_list_item" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_employee_list_item_delete_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete"
        style="@style/ManageEmployeeButtonStyle"/>
</RelativeLayout>