<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/calendar_view_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textColor="#222222">

        <ImageView
            android:id="@+id/calendar_view_prev_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@id/calendar_view_month_year_text_view"
            android:foregroundGravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/calendar_view_month_year_text_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#222222"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/calendar_view_next_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/calendar_view_month_year_text_view"
            android:foregroundGravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/calendar_view_header"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="T2" />

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="T3" />

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="T4" />

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="T5" />

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="T6" />

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="T7" />

        <TextView
            style="@style/CustomCalendarViewHeader"
            android:text="CN" />

    </LinearLayout>

    <GridView
        android:id="@+id/calendar_view_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:numColumns="7"
        android:stretchMode="columnWidth" />
</merge>